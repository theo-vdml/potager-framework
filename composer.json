{
    "name": "potager/potager",
    "description": "A small PHP MVC Framework",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Potager\\": "src/",
            "Potager\\Test\\": "tests/App"
        },
        "files": [
            "src/Helpers/path.php",
            "src/Helpers/session.php",
            "src/Helpers/view.php"
        ]
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/theo-vdml/pixie-potager.git"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "latte/latte": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "potager/pixie": "dev-master",
        "scrivo/highlight.php": "^9.18",
        "theovdml/doh": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
